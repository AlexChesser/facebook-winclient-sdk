<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Facebook.Client.Controls">

    <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <Style TargetType="local:PlacePicker">
        <Setter Property="Width" Value="400" />
        <Setter Property="Height" Value="300" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PlacePicker">
                    <Border
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ListBox x:Name="PART_ListBox"
                            VerticalAlignment="Top"
                            Tag="{TemplateBinding DisplayProfilePictures}"
                            ItemsSource="{Binding}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="11*"/>
                                            <ColumnDefinition Width="12*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image 
                                            Height="50" 
                                            Width="50" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Visibility="{Binding Path=Tag, ElementName=PART_ListBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Source="{Binding PictureUri}"/>
                                        <StackPanel 
                                                    Grid.Column="1" 
                                                    VerticalAlignment="Center"
                                                    Margin="10,0,0,18" 
                                                    Orientation="Vertical">
                                            <TextBlock 
                                                       HorizontalAlignment="Left" 
                                                       TextWrapping="Wrap" 
                                                       Text="{Binding Name}" 
                                                       VerticalAlignment="Top" 
                                                       FontSize="24" /> 
                                            <TextBlock 
                                                       TextWrapping="Wrap" 
                                                       Text="{Binding Category}" 
                                                       FontSize="14.667"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
